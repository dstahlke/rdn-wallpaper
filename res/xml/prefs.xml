            android:key="param_0_2"
            android:summary="beta"
            android:defaultValue="2.168"
            robobunny:min="-4.0"
            robobunny:max="4.0"
            />

        <org.stahlke.rdnwallpaper.SeekBarPreference
            android:key="param_1_0"
            android:summary="D"
            android:defaultValue="1.0"
