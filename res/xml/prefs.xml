        />
    <PreferenceCategory
        android:key="slider_params"
        android:layout="@layout/slider_params"
        >
        <org.stahlke.rdnwallpaper.SeekBarPreference
            android:key="param_0_0"
            android:summary="D"
            android:defaultValue="1.0"
            robobunny:min="0.1"
            robobunny:max="3.0"
            />
        <org.stahlke.rdnwallpaper.SeekBarPreference
            android:key="param_0_1"
            android:summary="alpha"
            android:defaultValue="0.174"
