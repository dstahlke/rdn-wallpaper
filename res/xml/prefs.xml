            android:key="param_1_1"
            android:summary="phi"
            android:defaultValue="2.8"
            robobunny:min="2.5"
            robobunny:max="3.1"
            />
        <org.stahlke.rdnwallpaper.SeekBarPreference
            android:key="param_1_2"
            android:summary="mu"
            android:defaultValue="33.7"
            robobunny:min="33.0"
            robobunny:max="35.0"
            />
    </PreferenceCategory>
    <Preference
        android:key="prefs_buttons_box"
        android:layout="@layout/prefs_buttons_box"
        />
</PreferenceScreen>
